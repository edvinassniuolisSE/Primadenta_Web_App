@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#products").DataTable({
                ajax: {
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    sAjaxDataProp: "",
                    url: "/api/products",
                    dataSrc: ""
                },
                columns: [
                    { data: "name", "width": "20%" },
                    { data: "packaging", "width": "20%" },
                    { data: "company.name", "width": "20%" }
                    
                ]
            });

            $("#visi-produktai").on("click",
                function () {
                    $("li").removeClass("active");
                    table.clear();
                    table.destroy();
                    table = $("#products").DataTable({
                        ajax: {
                            type: "GET",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            sAjaxDataProp: "",
                            url: "/api/products",
                            dataSrc: ""
                        },
                        columns: [
                            { data: "name", "width": "20%" },
                            { data: "packaging", "width": "20%" },
                            { data: "company.name", "width": "20%" }
                        ]
                    });
                });

            $(".active-on-click").on("click", function () {
                $("li").removeClass("active");
                var current = $(this);
                current.addClass("active");
                table.clear();
                table.destroy();
                table = $("#products").DataTable({
                    ajax: {
                        type: "GET",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        sAjaxDataProp: "",
                        url: "/api/products?categoryId=" + $(this).attr("product-data-id"),
                        dataSrc: ""
                    },
                    columns: [
                        { data: "name", "width": "20%" },
                        { data: "packaging", "width": "20%" },
                        { data: "company.name", "width": "20%" }
                    ]
                });
            });
        });
    </script>
}

