@section scripts
{
    <script>
        $(document).ready(function() {

            var table = $("#products").DataTable({
                ajax: {
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    sAjaxDataProp: "",
                    url: "/api/products",
                    dataSrc: ""
                },
                columns: [
                    { data: "name", "width": "30%" },
                    { data: "packaging", "width": "10%" },
                    { data: "company.name", "width": "20%" },
                    {
                        data: "id",
                        width: "10%",
                        render: function(data) {
                            return "<button class='btn-link js-delete popup' data-product-id=" +
                                data +
                                ">Pašalinti</button>";
                        }
                    },
                    {
                        data: "id",
                        width: "10%",
                        render: function(data) {
                            return "<a class='btn-link' href='/products/edit/" + data + "'>Pakeisti</a>";
                        }
                    }
                ]
            });

            $("#products").on("click",
                ".js-delete",
                function() {
                    var buttonDom = $(this);
                    bootbox.confirm("Ar tikrai norite ištrinti?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/products/" + buttonDom.attr("data-product-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(buttonDom.parents("tr")).remove().draw();
                                    }

                                });

                            }
                        });
                });

            $('#visi-produktai').on('click',
                function() {
                    $("li").removeClass("active");
                    table.clear();
                    table.destroy();
                    table = $("#products").DataTable({
                        ajax: {
                            type: "GET",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            sAjaxDataProp: "",
                            url: "/api/products",
                            dataSrc: ""
                        },
                        columns: [
                            { data: "name", "width": "30%" },
                            { data: "packaging", "width": "10%" },
                            { data: "company.name", "width": "20%" },
                            {
                                data: "id",
                                width: "10%",
                                render: function(data) {
                                    return "<button class='btn-link js-delete popup' data-product-id=" +
                                        data +
                                        ">Pašalinti</button>";
                                }
                            },
                            {
                                data: "id",
                                width: "10%",
                                render: function(data) {
                                    @*return @Html.ActionLink("Update", "Edit", "Products", new {id = data})*@
                                    return "<a class='btn-link' href='/products/edit/" + data + "'>Pakeisti</a>";
                                }
                            }
                        ]
                    });
                });

            $('.active-on-click').on("click",
                function() {
                    table.clear();
                    table.destroy();
                    $("li").removeClass("active");
                    var current = $(this);
                    current.addClass("active");


                    table = $("#products").DataTable({
                        ajax: {
                            type: "GET",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            sAjaxDataProp: "",
                            url: "/api/products?categoryId=" + $(this).attr("product-data-id"),
                            //url: "/api/products?categoryId=6",
                            dataSrc: ""
                        },
                        columns: [
                            { data: "name", "width": "30%" },
                            { data: "packaging", "width": "10%" },
                            { data: "company.name", "width": "20%" },
                            {
                                data: "id",
                                width: "10%",
                                render: function(data) {
                                    return "<button class='btn-link js-delete popup' data-product-id=" +
                                        data +
                                        ">Pašalinti</button>";
                                }
                            },
                            {
                                data: "id",
                                width: "10%",
                                render: function(data) {
                                    @*return @Html.ActionLink("Update", "Edit", "Products", new {id = data})*@
                                    return "<a class='btn-link' href='/products/edit/" + data + "'>Pakeisti</a>";
                                }
                            }
                        ]
                    });
                });
        });
    </script>
}

